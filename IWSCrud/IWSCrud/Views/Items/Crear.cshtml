@model IWSCrud.Models.Item
@{
    ViewData["Title"] = "Crear nuevo producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2>Crear nuevo producto</h2>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Crear">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Active" class="control-label"></label>
                    <input asp-for="Active" class="form-control" value="Verdadero" disabled/>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Crear producto" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    @{ <partial name="_ValidationScriptsPartial" /> }
}