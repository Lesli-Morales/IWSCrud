
@model IEnumerable<IWSCrud.Models.Item>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    @if (TempData["mensaje"] != null) {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span area-hidden="true">&times;</span>
            </button>
        </div>
    }

    <div class="row">
        <div class="col-sm-6">
            <h2>Productos</h2>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-outline-success d-block" asp-action="Crear" asp-controller="Items">Agregar nuevo producto</a>        
        </div>
    </div>


    <div class="row">
        @if(Model.Count() > 0){
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.idItem)</td>
                        <td>@Html.DisplayNameFor(m => m.Name)</td>
                        <td>@Html.DisplayNameFor(m => m.Type)</td>
                        <td>@Html.DisplayNameFor(m => m.Active)</td>
                        <td>@Html.DisplayNameFor(m => m.Description)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>@item.idItem</td>
                            <td>@item.Name</td>
                            <td>@item.Type</td>
                            <td>@item.Active</td>
                            <td>@item.Description</td>
                            <td>
                                <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.idItem" asp-controller="Items" >Editar</a>                             
                                <a asp-controller="Items" asp-action="Eliminar" asp-route-id="@item.idItem" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else {
            <p>NO EXISTE NINGUN REGISTRO</p>
        }
    </div>
</div>

